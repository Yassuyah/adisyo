{
  "name": "egepos",
  "version": "1.0.0",
  "private": true,
  "description": "By Egecan Ertap",
  "main": "main.js",
  "author": "Yassuyah",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
   "dev": "vite",
   "build": "vite build",
   "start": "electron .",
   "postinstall": "electron-builder install-app-deps",
   "dist": "npm run build && electron-builder --win nsis --x64 --ia32",
   "dev:all": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\""
 },
  "dependencies": {
    "electron-pos-printer": "^1.3.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "recharts": "^2.15.4"
  },
  "devDependencies": {
    "electron": "^21.4.4",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.2.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.0",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.yassuyah.adisyo",
    "productName": "Adisyo",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "main.js",
      "preload.js",
      "src/data/menu.json",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    }
  }
}
