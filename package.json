{
  "name": "pos-uygulamasi",
  "private": true,
  "version": "0.0.0",
  "main": "electron.js",
  "homepage": "./",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start-react": "vite",
    "start-electron": "ELECTRON_START_URL=http://localhost:5173 electron .",
    "dev-electron": "concurrently \"npm run start-react\" \"wait-on http://localhost:5173 && npm run start-electron\"",
    "build-electron": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-pos-printer": "^1.3.7",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.egepos.app",
    "productName": "EGE POS",
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "src/data/menu.js"
    ],
    "directories": {
      "output": "release"
    }
  }
}